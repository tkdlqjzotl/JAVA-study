요따구로출력하기




int k=1;
		for(int i=0;i<5;i++)
		{
			
			for(int j=Math.abs(i-2);j<2 ;j++)
			{
				System.out.print("    ");				
			}
			
			
			
			for(int j=0;j<=Math.abs(4-2*i);j++)
			{
				System.out.print(k);
				if(i>=2)System.out.print("  ");
				else System.out.print("   ");				
				k++;
				
			}
			System.out.println();
			
			
		}
